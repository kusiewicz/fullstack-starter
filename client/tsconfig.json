{
    "extends": "./tsconfig.paths.json",
    "compilerOptions": {
      "target": "es2022",                                 
      "module": "CommonJS",
      "moduleResolution": "node",                            
      "esModuleInterop": true,                            
      "forceConsistentCasingInFileNames": true,           
      "strict": true,  
      "outDir": "dist",        
      "jsx": "react-jsx"
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules", "dist", "build"],
    "resolve": {
      "extensions": [".ts", ".tsx", ".js", ".jsx"]
    }
  }
  